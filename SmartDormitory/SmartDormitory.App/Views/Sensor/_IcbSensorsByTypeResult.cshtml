@model List<IcbSensorsListViewModel>

@if (!Model.Any())
{
    <div class="text-warning text-center text-monospace">Select type for results</div>
}
else
{
    <table class="table table-hover table-striped table-fixed">
        <thead class="thead-dark">
            <tr>
                <th>Sensor model</th>
                <th>Description</th>
                <th>Refresh rate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sensor in Model)
            {
                <tr class="font-weight-bold">
                    <td class="font-weight-bold">@sensor.Tag</td>
                    <td class="font-weight-bold">@sensor.Description</td>
                    <td>
                        <span class="h6 text-warning"><em>@sensor.PollingInterval</em></span>
                        <small>seconds</small>
                    </td>
                    <td>
                        <a asp-controller="Sensor" asp-action="Create" asp-route-icbSensorId="@sensor.Id"
                           asp-route-userId="@sensor.UserId"
                           class="btn btn-primary">Next</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}



