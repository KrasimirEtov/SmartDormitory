@if (TempData["Error-Message"] != null)
{
    <div class="alertMsg alert alert-danger alert-dismissible fade show text-center font-weight-bold" role="alert">
        @TempData["Error-Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["Success-Message"] != null)
{
    <div class="alertMsg alert alert-success alert-dismissible fade show text-center font-weight-bold" role="alert">
        @TempData["Success-Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
