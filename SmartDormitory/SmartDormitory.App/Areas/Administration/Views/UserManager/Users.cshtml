@model UserViewModelList
@{
    ViewData["Title"] = "Users";
}
<h2 style="text-align:center">All users</h2>
<hr />
@*@await Html.PartialAsync("_ResultPartial")*@

<partial name="_UsersTablePartial" model="@Model" />

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <input type="hidden" id="userId" />
        <div class="modal-content">
            <form asp-area="Administration" asp-controller="UserManager" asp-action="Delete" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModal">Delete user</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this user?</p>
                    <p class="text-warning"><small>This action cannot be undone.</small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-danger" value="Delete" id="Delete">
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/roleManager.js"></script>
}
<script>
    $('#deleteModal').on('show.bs.modal', function (e) {
        $('a').attr('asp-route-userId', $(e.relatedTarget).data('id'))
        $("#userId").val($(e.relatedTarget).data('id'));
    });
</script>