@model IEnumerable<SmartDormitory.Data.Models.Notification>

<h2>Inbox</h2>

<div class="row">
    <div class="col-md-6">
        <a asp-controller="Users" asp-action="Inbox" asp-route-type="received" class="btn btn-success">Received</a>
        <a asp-controller="Users" asp-action="Inbox" asp-route-type="sent" class="btn btn-success">Sent</a>
    </div>
</div>
<hr />
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">New</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Profile</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Contact</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">...</div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">...</div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
</div>

<table id="current-user-messages" class="table table-hover table-striped table-responsive-sm">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Message</th>
            <th>Date time</th>
            <th>Sensor name</th>
            <th>Alarm value</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="bg-white">
        @foreach (var notif in Model)
        {
            <tr>
                <td>@notif.Title</td>
                <td>@notif.Seen</td>
                <td>@notif.CreatedOn</td>
                <td>@notif.SensorId</td>
                <td>@notif.AlarmValue</td>
                <td>
                    <div class="row">
                        <a asp-controller="Sensor" asp-action="Details" asp-route-id="@notif.SensorId">
                            Check sensor
                        </a>
                        <form asp-controller="Users" asp-action="DeleteMessage" asp-route-id="@notif.Id" method="post" data-ajax="true" data-ajax-success="deleteItem(this)">
                            <button type="submit" class="btn btn-sm btn-danger d-none d-md-inline-block">
                                Delete
                                <i class="glyphicon glyphicon-trash text-danger"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
